
# Firefox 
assign [app_id="firefox"] 6

# Microsoft Teams - Preview
assign [class="^Microsoft Teams"] 8
no_focus [title="Microsoft Teams .* Notification"]

# Window role settings
for_window [window_type="popup_menu"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_role="dialog"] floating enable
for_window [window_role="menu"] floating enable
for_window [window_role="About"] floating enable
for_window [title="nmtui"] floating enable, resize set width 50 ppt height 70 ppt
for_window [title="btm"] floating enable, resize set width 50 ppt height 70 ppt
for_window [title="Save File"] floating enable
for_window [title="Copying"] floating enable

# Apps that don't need to be tiled
for_window [app_id="wdisplays"] {
    floating enable
}

# Make Firefox PiP floating
for_window [title="[Pp]icture.in.[Pp]icture"] floating enabled

# Teams
for_window [title="Microsoft Teams .* Notification"] {
    floating enable
        move position 20 20
}

# Bluetooth
for_window [app_id="blueberry.py"] {
    floating enable
        move position center
}

# pinextry
for_window [app_id="pinentry-qt"] {
    floating enable
    move position center
}
