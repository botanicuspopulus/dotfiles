#!/bin/bash

options=$(echo -e "󰁍 Back\n󰐥 Shutdown\n󰜉 Reboot\n󰍃 Logout\n󰒲 Suspend" | wofi -d -i -p 'Power Menu' -k /dev/null)

case $options in
  back)
    ;;
  shutdown)
    ;&
  reboot)
    ;&
  suspend)
    systemctl "$options"
    ;;
  lock)
    swaylock
    ;;
  logout)
    swaymsg exit
    ;;
esac
